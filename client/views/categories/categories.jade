h3 Categories

.row
  .col-xs-3
    form(role='form', novalidate, name='categoryForm')
      .form-group
        label(for='name') Name
        input.form-control#name(type='text', name='name', ng-model='name', autofocus, required)
        button.btn.btn-primary(ngshow='categoryForm.$valid', ng-click='createCategory()') Create Category
  .col-xs-9
.row
  .col-xs-3
    .panel.panel-default
      .panel-body

        table.table.table-hover.table-bordered
          thead
            tr
              th Category Name
          tbody
            tr(ng-repeat='c in categories')
              td {{c.name}}
  .col-xs-6

